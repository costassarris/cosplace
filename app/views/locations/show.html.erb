<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @location.name %>
</p>

<p>
  <strong>Address:</strong>
  <%= @location.address %>
</p>

<img src="http://maps.google.com/maps/api/staticmap?size=450x300&sensor=false&zoom=16&markers=<%=@location.latitude%>,<%= @location.longitude%>">

<h3>Nearby Locations</h3>

<ul>
<% for location in @location.nearbys(10) %>
  <li><%= location.name %> (<%= location.distance.round(2) %> miles)</li>
<% end %>
</ul>


<%= link_to 'Edit', edit_location_path(@location),  :class => 'btn btn-info' %> |
<%= link_to 'Back', locations_path,  :class => 'btn btn-primary' %>
